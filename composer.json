{
    "name": "christiankuri/laravel-favorite",
    "type": "library",
    "description": "Allows Laravel Eloquent models to implement a 'favorite' or 'remember' or 'follow' feature.",
    "keywords": [
        "ChristianKuri",
        "laravel-favorite",
        "laravel",
        "follow",
        "package",
        "favorite",
        "favourite",
        "favoritable",
        "remember"
    ],
    "homepage": "https://github.com/ChristianKuri/laravel-favorite",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Kuri",
            "email": "christian.kuri.martinez@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/config": "~5.1.24|~5.2.0|~5.3.0",
        "illuminate/database": "~5.1.24|~5.2.6|~5.3.0",
        "illuminate/support": "~5.1.24|~5.2.0|~5.3.0",
        "php" : ">=5.6.4"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.2",
        "orchestra/testbench": "~3.1.2|3.3.x-dev",
        "orchestra/database": "~3.1.2|3.3.x-dev"
    },
    "autoload": {
        "psr-4": {
            "ChristianKuri\\LaravelFavorite\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ChristianKuri\\LaravelFavorite\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
